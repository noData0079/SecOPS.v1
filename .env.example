# TSM99 Environment Configuration
# Copy this file to .env and fill in the values
# =============================================

# Environment
ENV=production

# API Server
API_PORT=8000
API_HOST=0.0.0.0

# Frontend
NEXT_PUBLIC_API_URL=https://api.thesovereignmechanica.ai
NEXT_PUBLIC_APP_NAME=TSM99
NEXT_PUBLIC_APP_DOMAIN=thesovereignmechanica.ai
FRONTEND_ORIGIN=https://app.thesovereignmechanica.ai

# Database (PostgreSQL)
DATABASE_URL=postgresql://tsm99:${DB_PASSWORD}@localhost:5432/tsm99_production

# Redis
REDIS_URL=redis://localhost:6379/0

# Security (REQUIRED - Generate strong secrets)
JWT_SECRET_KEY=<generate-256-bit-secret>
ENCRYPTION_KEY=<generate-256-bit-key>

# LLM Providers (Optional - for cloud fallback)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Local LLM (Ollama)
OLLAMA_HOST=http://localhost:11434

# Vector Store
QDRANT_HOST=localhost
QDRANT_PORT=6333
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Observability (Optional)
SENTRY_DSN=
SENTRY_ENV=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Prometheus
PROMETHEUS_ENABLED=true

# Vault (Trust Ledger)
VAULT_KEY_PATH=/etc/tsm99/certs/vault.key
VAULT_CERT_PATH=/etc/tsm99/certs/vault.crt

# Brain (Signing)
BRAIN_PRIVATE_KEY_PATH=/etc/tsm99/certs/brain_private.pem
BRAIN_PUBLIC_KEY_PATH=/etc/tsm99/certs/brain_public.pem

# Ice Age Mode
ICE_AGE_ENABLED=false
OFFLINE_MODE=false

# Economics
DAILY_BUDGET_USD=100.00
EMERGENCY_CUTOFF_ENABLED=true
