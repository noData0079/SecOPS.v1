##############################################
# ENVIRONMENT
##############################################
ENV=development
LOG_LEVEL=INFO

##############################################
# BACKEND APP
##############################################
APP_NAME=SecOpsAI
API_PREFIX=/api

##############################################
# JWT AUTH
##############################################
JWT_SECRET=change_me_to_a_long_random_secret
JWT_EXPIRE_MINUTES=1440
JWT_ALGORITHM=HS256

##############################################
# DATABASE (Postgres)
##############################################
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=secops
DB_SSLMODE=disable

##############################################
# SUPABASE (Auth + Storage + pgvector)
##############################################
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_KEY=your_service_key
SUPABASE_JWT_SECRET=your_jwt_secret

##############################################
# VECTOR STORAGE (QDRANT OPTIONAL)
##############################################
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_key

##############################################
# REDIS / KV CACHE
##############################################
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

##############################################
# LLM PROVIDERS (MULTI-LAYER CONFIG)
##############################################

# ---- OpenAI / OpenAI-Compatible (DeepSeek, Perplexity, TogetherAI) ----
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
# For DeepSeek:
# OPENAI_BASE_URL=https://api.deepseek.com/v1

# ---- Anthropic ----
ANTHROPIC_API_KEY=

# ---- Google Gemini ----
GOOGLE_API_KEY=

##############################################
# RAG SYSTEM SETTINGS
##############################################
RAG_MAX_TOKENS=2048
RAG_TEMPERATURE=0.2
RAG_TOP_K=5
RAG_ENABLE_CITATIONS=true

##############################################
# GITHUB INTEGRATIONS
##############################################
GITHUB_TOKEN=
GITHUB_ORG=
GITHUB_REPO=

##############################################
# SECURITY / DEVSECOPS CHECKS
##############################################
ENABLE_GITHUB_DEPS_CHECK=true
ENABLE_GITHUB_SECURITY_CHECK=true
ENABLE_K8S_MISCONFIG_CHECK=true
ENABLE_CI_HARDENING_CHECK=true

##############################################
# KUBERNETES API
##############################################
K8S_KUBECONFIG=
K8S_API_SERVER=
K8S_BEARER_TOKEN=

##############################################
# NOTIFICATIONS (EMAIL / SLACK / WEBHOOK)
##############################################
EMAIL_FROM=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

SLACK_WEBHOOK_URL=
GENERIC_WEBHOOK_URL=

##############################################
# COST TRACKER + BILLING
##############################################
BILLING_ENABLED=false
BILLING_BASE_MARGIN_PERCENT=20   # platform fee baseline
BILLING_HIGH_MARGIN_PERCENT=35   # for high usage customers

##############################################
# OPTIONAL
##############################################
SENTRY_DSN=
